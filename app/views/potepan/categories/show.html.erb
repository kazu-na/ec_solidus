<% provide(:title, @taxon.name) %>
<!-- LIGHT SECTION -->
<%= render 'shared/product_bar', object: @taxon %>
<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix productsContent">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-4 col-xs-12 sideBar">
        <%= render 'categories', taxonomies: @taxonomies %>
        <%= render 'colors', colors: @colors %>
        <%= render 'sizes', sizes: @sizes %>
      </div>
      <div class="col-md-9 col-sm-8 col-xs-12">
        <div class="row filterArea">
          <%= render 'filter_area' %>
        </div>
        <div class="row productListSingle">
          <%= render partial: 'product', collection: @products %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- LIGHT SECTION -->
<%= render 'shared/brand_bar' %>
