<% provide(:title, @taxon.name) %>
<!-- LIGHT SECTION -->
<%= render 'top_light_section', taxon: @taxon %>
<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix productsContent">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-4 col-xs-12 sideBar">
        <%= render 'side_bar', taxonomies: @taxonomies %>
      </div>
      <div class="col-md-9 col-sm-8 col-xs-12">
        <%= render 'filter_area' %>
        <%= render 'product_box', products: @products %>
      </div>
    </div>
  </div>
</section>
<!-- LIGHT SECTION -->
<%= render 'shared/bottom_light_section' %>
